{
  "name": "oxc-parser",
  "version": "0.102.0",
  "description": "Oxc Parser Node API",
  "keywords": [
    "oxc",
    "parser"
  ],
  "homepage": "https://oxc.rs",
  "bugs": "https://github.com/oxc-project/oxc/issues",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/oxc-project/oxc.git",
    "directory": "napi/parser"
  },
  "author": "Boshen and oxc contributors",
  "funding": {
    "url": "https://github.com/sponsors/Boshen"
  },
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "browser": "dist/wasm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/"
  ],
  "scripts": {
    "build-napi": "napi build --esm --platform --js bindings.js --dts index.d.ts --output-dir src-js && node scripts/patch.js",
    "build-napi-wasm": "napi build --esm --platform --js bindings.js --dts index.d.ts --output-dir src-js --target wasm32-wasip1-threads && node scripts/patch.js",
    "build-js": "node scripts/build.ts",
    "build-dev": "pnpm run build-napi && pnpm run build-js",
    "build-test": "pnpm run build-napi --profile coverage && pnpm run build-js",
    "build": "pnpm run build-napi --features allocator --release && pnpm run build-js",
    "postbuild": "publint",
    "build-wasi": "napi build --target wasm32-wasip1-threads",
    "build-wasm": "pnpm run build-wasm-dev --release",
    "build-wasm-dev": "pnpm run build-napi-wasm && pnpm run build-js",
    "build-npm-dir": "rm -rf npm-dir && napi create-npm-dirs --npm-dir npm-dir && pnpm napi artifacts --npm-dir npm-dir --output-dir dist --build-output-dir dist",
    "build-browser-bundle": "node scripts/build-browser-bundle.js",
    "test": "pnpm run test-node run",
    "test-node": "vitest --dir ./test",
    "test-browser": "vitest -c vitest.config.browser.ts",
    "bench": "vitest bench --run ./bench.bench.js"
  },
  "dependencies": {
    "@oxc-project/types": "workspace:^"
  },
  "devDependencies": {
    "@codspeed/vitest-plugin": "^5.0.0",
    "@napi-rs/cli": "catalog:",
    "@napi-rs/wasm-runtime": "catalog:",
    "@types/node": "catalog:",
    "@typescript-eslint/visitor-keys": "^8.44.0",
    "@vitest/browser": "4.0.15",
    "@vitest/browser-playwright": "4.0.15",
    "esbuild": "^0.27.0",
    "playwright": "^1.51.0",
    "publint": "catalog:",
    "tinypool": "^2.0.0",
    "tsdown": "catalog:",
    "vitest": "catalog:"
  },
  "napi": {
    "binaryName": "parser",
    "dtsHeaderFile": "src-js/header.d.ts",
    "packageName": "@oxc-parser/binding",
    "targets": [
      "aarch64-apple-darwin",
      "aarch64-linux-android",
      "aarch64-pc-windows-msvc",
      "aarch64-unknown-linux-gnu",
      "aarch64-unknown-linux-musl",
      "aarch64-unknown-linux-ohos",
      "armv7-unknown-linux-gnueabihf",
      "riscv64gc-unknown-linux-gnu",
      "s390x-unknown-linux-gnu",
      "wasm32-wasip1-threads",
      "x86_64-apple-darwin",
      "x86_64-pc-windows-msvc",
      "x86_64-unknown-freebsd",
      "x86_64-unknown-linux-gnu",
      "x86_64-unknown-linux-musl"
    ],
    "wasm": {
      "browser": {
        "fs": false
      }
    }
  },
  "engines": {
    "node": "^20.19.0 || >=22.12.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
