{
  "name": "@oxc-parser/binding",
  "private": true,
  "napi": {
    "binaryName": "parser",
    "targets": [
      "x86_64-pc-windows-msvc",
      "aarch64-pc-windows-msvc",
      "x86_64-unknown-linux-gnu",
      "aarch64-unknown-linux-gnu",
      "x86_64-unknown-linux-musl",
      "aarch64-unknown-linux-musl",
      "x86_64-apple-darwin",
      "aarch64-apple-darwin"
    ],
    "dtsHeaderFile": "header.js"
  },
  "dependencies": {
    "@oxc-project/types": "workspace:^"
  },
  "scripts": {
    "build-dev": "napi build --platform --js bindings.js",
    "build": "napi build --platform --js bindings.js --release",
    "test": "vitest --typecheck run ./test"
  },
  "nx": {
    "targets": {
      "build-dev": {
        "inputs": [
          "rust",
          "{workspaceRoot}/**/*.rs",
          "{projectRoot}/src/**/*.rs",
          "{projectRoot}/tsconfig.json"
        ],
        "outputs": [
          "{projectRoot}/index.d.ts",
          "{projectRoot}/bindings.js",
          "{projectRoot}/*.node"
        ],
        "cache": true
      },
      "test": {
        "dependsOn": ["build-dev"],
        "inputs": [
          "rust",
          "^rust",
          "{projectRoot}/test/**",
          "{projectRoot}/tsconfig.json"
        ],
        "cache": true
      }
    }
  }
}
