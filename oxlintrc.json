{
  "$schema": "./node_modules/oxlint/configuration_schema.json",
  "plugins": [
    "typescript",
    "unicorn",
    "react",
    "react-perf",
    "oxc",
    "import",
    "jsdoc",
    "node",
    "promise",
    "vitest"
  ],
  "jsPlugins": ["./oxlint-plugin.mts"],
  "categories": {
    "correctness": "error",
    "perf": "error"
  },
  "rules": {
    "no-console": "error",
    "prefer-destructuring": ["error", {
      "VariableDeclarator": { "array": false, "object": true }
    }],
    "typescript/consistent-indexed-object-style": ["error", "record"],
    "eslint-js/prefer-const": ["error", { "destructuring": "all" }]
  },
  "overrides": [
    {
      "files": ["**/editors/vscode/tests/*.spec.ts"],
      "rules": {
        // VSCode uses `vscode-test-cli`, which uses `mocha`.
        // Ignore specific rules, instead of copying the plugins array.
        "vitest/expect-expect": "off"
      }
    },
    {
      "files": [
        "tasks/e2e/test/*.test.ts"
      ],
      "rules": {
        "vitest/valid-title": ["error", {
          "typecheck": true
        }]
      }
    }
  ],
  "ignorePatterns": [
    "**/fixtures/**",
    "**/generated/**",
    "npm/runtime/**",
    "tasks/coverage/**",
    "crates/oxc_semantic/tests/**",
    "napi/minify/**", // TODO
    "!apps/oxlint/test/fixtures/**",
    "apps/oxlint/test/fixtures/*/files/**",
    "apps/oxlint/conformance/submodules/**",
    // Files generated by NAPI-RS
    "*.d.ts",
    "napi/*/*.wasi.cjs",
    "napi/*/*.wasi-browser.js",
    "napi/*/wasi-worker.mjs",
    "napi/*/wasi-worker-browser.mjs",
    "napi/*/src-js/*.wasi.cjs",
    "napi/*/src-js/*.wasi-browser.js",
    "napi/*/src-js/wasi-worker.mjs",
    "napi/*/src-js/wasi-worker-browser.mjs"
  ]
}
